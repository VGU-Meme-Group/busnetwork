pipeline {
    agent any
    
    environment {
        JUPYTER_NOTEBOOK = '../machine_learning/linear_regression.ipynb' // Replace with the path to your notebook file
        OUTPUT_SCRIPT = 'output_script.py' // Output script generated by nbconvert
    }

    stages {
        stage('Convert Notebook to Script') {
            steps {
                script {
                    sh "jupyter nbconvert --to script ${JUPYTER_NOTEBOOK} --output ${OUTPUT_SCRIPT}"
                }
            }
        }

        stage('Execute Script') {
            steps {
                script {
                    sh "python ${OUTPUT_SCRIPT}" // Execute the generated Python script
                }
            }
        }
    }

    post {
        success {
            echo 'Notebook executed successfully!'
        }
        failure {
            echo 'Notebook execution failed!'
        }
    }
}
